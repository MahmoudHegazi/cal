<script>

    /*
    <!-- New List -->
    <div class="drop-list drop-columns card">
      <div class="card-body">
        <div class="card-title">
          <span>${Cardtitle}</span>
          <span class="menu_sign"><i class="fa fa-ellipsis-h float_right" ></i></span>
